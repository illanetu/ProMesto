// Схема БД по DATABASE.md:
// User — владелец записей, автор, голосующий
// Note — заметки
// Mesto — запись о месте (visibility: PRIVATE|PUBLIC)
// Category — категория места
// Tag — метки (многие-ко-многим с Mesto)
// Vote — голос за публичное Mesto (уникально: один пользователь — один голос на запись)
// Правила: onDelete Cascade для связей; UNIQUE(userId, mestoId); индексы по DATABASE.md

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Visibility {
  PRIVATE
  PUBLIC
}

// User: id, email, name, image, createdAt — владелец записей и аккаунт Auth.js
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime? @map("email_verified")
  createdAt     DateTime  @default(now()) @map("created_at")

  accounts Account[]
  sessions Session[]
  notes    Note[]
  mestos   Mesto[]
  votes    Vote[]
  likes    Like[]

  @@map("users")
}

// Модели Auth.js для OAuth и database sessions
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Note: id, ownerId -> User, title, createdAt
model Note {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now()) @map("created_at")
  ownerId   String   @map("owner_id")

  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@map("notes")
}

// Category: id, category
model Category {
  id       String  @id @default(cuid())
  category String

  mestos Mesto[]

  @@map("categories")
}

// Mesto: id, ownerId -> User, title, content, description?, categoryId -> Category,
// visibility (PRIVATE|PUBLIC = isPublic), isFavorite, createdAt, updatedAt
model Mesto {
  id          String     @id @default(cuid())
  title       String
  content     String
  description String?
  visibility  Visibility @default(PRIVATE)
  isFavorite  Boolean    @default(false) @map("is_favorite")
  publishedAt DateTime?  @map("published_at")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  ownerId     String     @map("owner_id")
  categoryId  String?    @map("category_id")

  owner    User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  tags     Tag[]
  votes    Vote[]
  likes    Like[]

  @@index([ownerId, updatedAt])
  @@index([visibility, createdAt])
  @@index([ownerId, isFavorite])
  @@map("mestos")
}

// Tag — метки, многие-ко-многим с Mesto
model Tag {
  id    String  @id @default(cuid())
  name  String

  mestos Mesto[]

  @@map("tags")
}

// Vote: id, userId -> User, mestoId -> Mesto, value default 1, createdAt
// UNIQUE(userId, mestoId); индексы Vote(mestoId), Vote(userId)
model Vote {
  id        String   @id @default(cuid())
  value     Int      @default(1)
  createdAt DateTime @default(now()) @map("created_at")
  userId    String   @map("user_id")
  mestoId   String   @map("mesto_id")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  mesto Mesto @relation(fields: [mestoId], references: [id], onDelete: Cascade)

  @@unique([userId, mestoId])
  @@index([mestoId])
  @@index([userId])
  @@map("votes")
}

// Like: лайк публичного Mesto. 1 пользователь = 1 лайк на место (toggle)
model Like {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  mestoId   String   @map("mesto_id")
  createdAt DateTime @default(now()) @map("created_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  mesto Mesto @relation(fields: [mestoId], references: [id], onDelete: Cascade)

  @@unique([userId, mestoId])
  @@index([mestoId])
  @@map("likes")
}
